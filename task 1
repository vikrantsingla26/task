#include <iostream>
#include <iomanip>
#include <string>
using namespace std;

int main() {
    double tempInput;
    string scale;

    cout << "Enter temperature value: ";
    cin >> tempInput;

    cout << "Enter scale (C for Celsius, F for Fahrenheit, K for Kelvin): ";
    cin >> scale;

    double celsius, fahrenheit, kelvin;

    if (scale == "C" || scale == "c") {
        celsius = tempInput;
        fahrenheit = (celsius * 9.0 / 5.0) + 32;
        kelvin = celsius + 273.15;
    } 
    else if (scale == "F" || scale == "f") {
        fahrenheit = tempInput;
        celsius = (fahrenheit - 32) * 5.0 / 9.0;
        kelvin = celsius + 273.15;
    } 
    else if (scale == "K" || scale == "k") {
        kelvin = tempInput;
        celsius = kelvin - 273.15;
        fahrenheit = (celsius * 9.0 / 5.0) + 32;
    } 
    else {
        cout << "Invalid scale input. Please use C, F, or K.\n";
        return 1;
    }

    cout << fixed << setprecision(2);
    cout << "\nConverted Temperatures:\n";
    cout << "Celsius:    " << celsius << " °C\n";
    cout << "Fahrenheit: " << fahrenheit << " °F\n";
    cout << "Kelvin:     " << kelvin << " K\n";

    return 0;
}
